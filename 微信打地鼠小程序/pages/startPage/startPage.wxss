/* pages/startPage/startPage.wxss */
.startScene{
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
}
.startScene image{
  width: 100%;
  height: 100%;
}

.startBtn{
  width: 400rpx;
  height: 200rpx;
  position: absolute;
  bottom: 70rpx;
  left: 50%;
  margin-left:-200rpx; 
}
.startBtn image{
  width: 100%;
  height: 100%;
  animation: btn 1.5s infinite alternate;
}
@keyframes btn{
  0%{
    filter: brightness(1)
  }
  100%{
    filter: brightness(1.2)
  }
}